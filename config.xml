<?xml version='1.0' encoding='utf-8'?>
<widget id="me.thatmustbe.mobilepub" version="0.2.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MobilePub</name>
    <description>
        A simple MicroPub posting application.
    </description>
    <author email="ben@thatmustbe.me" href="http://ben.thatmustbe.me">
        Ben Roberts
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="res/android/note.png" platform="android" width="256" height="256" density="mdpi" />

    <gap:plugin name="Network" value="org.apache.cordova.network-information"/>
    <gap:plugin name="Camera" value="org.apache.cordova.camera" />
    <gap:plugin name="Device" value="org.apache.cordova.device" />
    <gap:plugin name="Dialogs" value="org.apache.cordova.dialogs" />
    <gap:plugin name="File" value="org.apache.cordova.file" />
    <gap:plugin name="File-Transfer" value="org.apache.cordova.file-transfer" />
    <gap:plugin name="Geolocation" value="org.apache.cordova.geolocation" />
    <gap:plugin name="Inappbrowser" value="org.apache.cordova.inappbrowser" />
    <gap:plugin name="Media-Capture" value="org.apache.cordova.media-capture" />

</widget>
